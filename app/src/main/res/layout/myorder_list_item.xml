<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|left"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/itemcolor_selector1"
        android:gravity="center_vertical|left"
        android:orientation="horizontal">




        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:text="041324635012543"
                    android:textColor="@color/textgray2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_ordertime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="right"
                    android:text="2017-04-13 15:17:33"
                    android:textColor="@color/textgray2"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_goods"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:focusable="false"
                android:lines="2"
                android:text="在线支付送货上门"
                android:textColor="@color/textgray"
                android:textSize="16sp" />




            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="6dp"
                android:gravity="bottom|right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:text="实付款："
                    android:textColor="@color/textgray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:drawableLeft="@drawable/rmb"
                    android:drawablePadding="2dp"
                    android:text=""
                    android:textColor="@color/warnred"
                    android:textSize="18sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>