<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/ll_doorchecked_item"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:orientation="horizontal"
		android:background="@color/white"
		android:gravity="center_vertical">

			<ImageView
				android:id="@+id/passed_image"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:focusable="false"
				android:src="@drawable/pre_mj"/>

			<TextView
				android:id="@+id/doorchecked_cellname"
				android:layout_height="match_parent"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:textSize="16sp"
				android:text="春风与湖"
				android:layout_marginLeft="10dp"
				android:textColor="@color/popular"
				android:gravity="center_vertical"
				android:textStyle="bold"
				android:focusable="false"
				android:ellipsize="end"/>

			<ImageView
				android:id="@+id/doorchecked_next"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:focusable="false"
				android:src="@drawable/next_off"/>

