<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_top"
        layout="@layout/activity_top" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_hk_order_step_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/label_hk_order_details_step_state"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@id/label_hk_order_details_step_state">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="30px"
                android:layout_height="80px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_hk_order_step_1"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_state_past" />

                <TextView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/leftbackground" />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/tv_hk_order_step_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="支付完成"
                android:textColor="@color/notchecked"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_hk_order_step_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/layout_hk_order_step_1"
            android:layout_below="@id/layout_hk_order_step_1">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="30px"
                android:layout_height="80px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_hk_order_step_2"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_state_now" />

                <TextView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/leftbackground" />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/tv_hk_order_step_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="商家已接单"
                android:textColor="@color/notchecked"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_hk_order_step_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/layout_hk_order_step_2"
            android:layout_below="@id/layout_hk_order_step_2">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="30px"
                android:layout_height="80px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_hk_order_step_3"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_state_wait" />

                <TextView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/leftbackground" />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/tv_hk_order_step_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="正在派遣服务人员"
                android:textColor="@color/notchecked"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_hk_order_step_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/layout_hk_order_step_3"
            android:layout_below="@id/layout_hk_order_step_3">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="30px"
                android:layout_height="80px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_hk_order_step_4"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_state_wait" />

                <TextView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/leftbackground" />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/tv_hk_order_step_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="服务人员已接单"
                android:textColor="@color/notchecked"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_hk_order_step_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/layout_hk_order_step_4"
            android:layout_below="@id/layout_hk_order_step_4">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="30px"
                android:layout_height="80px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_hk_order_step_5"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_state_wait" />

                <TextView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/leftbackground" />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/tv_hk_order_step_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="服务中"
                android:textColor="@color/notchecked"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_hk_order_step_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/layout_hk_order_step_5"
            android:layout_below="@id/layout_hk_order_step_5">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="30px"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_hk_order_step_6"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_state_wait" />

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/tv_hk_order_step_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="服务完成"
                android:textColor="@color/notchecked"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>