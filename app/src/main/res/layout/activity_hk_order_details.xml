<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/skyblue">


        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="30px"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_hk_order_details"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_below="@id/layout_title"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_hk_order_details"
            android:layout_width="200px"
            android:layout_height="150px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@drawable/timg" />

        <TextView
            android:id="@+id/tv_hk_order_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="30px"
            android:layout_marginTop="50px"
            android:layout_toRightOf="@id/img_hk_order_details"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="4小时家庭保洁"
            android:textColor="@color/popular"
            android:textSize="28px" />

        <TextView
            android:id="@+id/label_hk_order_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_hk_order_details_title"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50px"
            android:text="营业时间："
            android:textColor="@color/notchecked"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_hk_order_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/label_hk_order_details_time"
            android:layout_marginRight="30px"
            android:layout_toRightOf="@id/label_hk_order_details_time"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="8:00-12:00"
            android:textColor="@color/notchecked"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/layout_hk_order_details"
        android:background="@color/linehkorder" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:background="@color/white"
        android:padding="30px"
        android:paddingTop="10px">

        <TextView
            android:id="@+id/label_hk_order_details_step_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务时间："
            android:textColor="@color/notchecked"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_hk_order_details_step_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/label_hk_order_details_step_time"
            android:layout_toRightOf="@id/label_hk_order_details_step_time"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:text="2017年7月26日 上午09:30"
            android:textColor="@color/notchecked"
            android:textSize="28px" />

        <TextView
            android:id="@+id/label_hk_order_details_step_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_hk_order_details_step_time"
            android:layout_marginTop="10px"
            android:text="服务地址："
            android:textColor="@color/notchecked"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_hk_order_details_step_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/label_hk_order_details_step_addr"
            android:layout_toRightOf="@id/label_hk_order_details_step_addr"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:text="重庆市大渡口区春晖路****小区****"
            android:textColor="@color/notchecked"
            android:textSize="28px" />

        <TextView
            android:id="@+id/label_hk_order_details_step_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_hk_order_details_step_addr"
            android:layout_marginTop="10px"
            android:text="联系电话："
            android:textColor="@color/notchecked"
            android:textSize="28px" />

        <TextView

            android:id="@+id/tv_hk_order_details_step_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/label_hk_order_details_step_phone"
            android:layout_toRightOf="@id/label_hk_order_details_step_phone"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:text="187-****-****"
            android:textColor="@color/notchecked"
            android:textSize="28px" />

        <TextView
            android:id="@+id/label_hk_order_details_step_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_hk_order_details_step_phone"
            android:layout_marginTop="10px"
            android:text="订单状态："
            android:textColor="@color/notchecked"
            android:textSize="28px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_hk_order_state_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/label_hk_order_details_step_state"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@id/label_hk_order_details_step_state">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="30px"
                android:layout_height="80px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_hk_order_state_1"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_state_past" />

                <TextView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/leftbackground" />
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:id="@+id/tv_hk_order_state_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付完成"
                android:layout_marginLeft="30px"
                android:textSize="28px"
                android:textColor="@color/notchecked"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_hk_order_state_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_hk_order_state_1"
            android:layout_alignLeft="@id/layout_hk_order_state_1">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="30px"
                android:layout_height="80px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_hk_order_state_2"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_state_now" />

                <TextView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/leftbackground" />
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:id="@+id/tv_hk_order_state_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家已接单"
                android:layout_marginLeft="30px"
                android:textSize="28px"
                android:textColor="@color/notchecked"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_hk_order_state_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_hk_order_state_2"
            android:layout_alignLeft="@id/layout_hk_order_state_2">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="30px"
                android:layout_height="80px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_hk_order_state_3"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_state_wait" />

                <TextView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/leftbackground" />
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:id="@+id/tv_hk_order_state_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在派遣服务人员"
                android:layout_marginLeft="30px"
                android:textSize="28px"
                android:textColor="@color/notchecked"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_hk_order_state_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_hk_order_state_3"
            android:layout_alignLeft="@id/layout_hk_order_state_3">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="30px"
                android:layout_height="80px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_hk_order_state_4"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_state_wait" />

                <TextView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/leftbackground" />
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:id="@+id/tv_hk_order_state_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务人员已接单"
                android:layout_marginLeft="30px"
                android:textSize="28px"
                android:textColor="@color/notchecked"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_hk_order_state_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_hk_order_state_4"
            android:layout_alignLeft="@id/layout_hk_order_state_4">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="30px"
                android:layout_height="80px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_hk_order_state_5"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_state_wait" />

                <TextView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/leftbackground" />
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:id="@+id/tv_hk_order_state_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务中"
                android:layout_marginLeft="30px"
                android:textSize="28px"
                android:textColor="@color/notchecked"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_hk_order_state_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_hk_order_state_5"
            android:layout_alignLeft="@id/layout_hk_order_state_5">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="30px"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_hk_order_state_6"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_state_wait" />

            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:id="@+id/tv_hk_order_state_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务完成"
                android:layout_marginLeft="30px"
                android:textSize="28px"
                android:textColor="@color/notchecked"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    <Button
        android:id="@+id/btn_hk_order_return"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/btn_cheng"
        android:layout_alignParentBottom="true"
        android:text="返 回"
        android:textColor="@color/white"
        android:textSize="30px"/>
</com.zhy.autolayout.AutoRelativeLayout>