<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginTop="2dp">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginTop="10px"
                android:text="运单号："
                android:textSize="20px" />

            <TextView
                android:id="@+id/tracking_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/num1"
                android:layout_toRightOf="@id/num1"
                android:text="2366137162**"
                android:textSize="20px" />

            <TextView
                android:id="@+id/send_express_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/num1"
                android:text="北京市"
                android:textColor="@color/popular"
                android:textSize="30px" />

            <TextView
                android:id="@+id/send_express_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:layout_below="@id/send_express_address"
                android:layout_marginTop="15px"
                android:text="湛洋"
                android:textColor="@color/popular"
                android:textSize="30px" />

            <TextView
                android:id="@+id/express_status"
                android:layout_width="250px"
                android:layout_height="wrap_content"
                android:layout_below="@id/num1"
                android:layout_marginTop="20px"
                android:layout_toRightOf="@id/send_express_address"
                android:drawableBottom="@drawable/ilon_jiantou"
                android:gravity="center"
                android:text="正在运输"
                android:textColor="@color/text_9"
                android:textSize="20px" />

            <TextView
                android:id="@+id/get_express_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/send_express_address"
                android:layout_toRightOf="@id/express_status"
                android:text="重庆市"
                android:textColor="@color/popular"
                android:textSize="30px" />

            <TextView
                android:id="@+id/get_express_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/send_express_address"
                android:layout_marginTop="15px"
                android:text="徐强"
                android:layout_alignLeft="@id/get_express_address"
                android:textColor="@color/popular"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:id="@+id/follow_sending"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="订单跟踪"
            android:textSize="30px"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingRight="25px"
            android:paddingLeft="25px"
            android:background="@drawable/postbtn_dianji"/>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>