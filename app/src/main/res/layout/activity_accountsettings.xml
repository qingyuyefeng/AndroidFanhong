<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:orientation="vertical" >    
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="50dp" 
	    android:layout_alignParentTop="true"
	    android:background="@color/white">
    </LinearLayout>
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="50dp" 
	    android:layout_alignParentBottom="true"
	    android:background="@color/black">
    </LinearLayout>
	<LinearLayout
     	android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:fitsSystemWindows="true"  
        android:clipToPadding="true"
	    android:orientation="vertical" > 
    	<RelativeLayout
	    	android:layout_width="fill_parent"
	    	android:layout_height="48dp"    	       
			android:layout_marginTop="4.0dip" 
			android:background="@color/white"
	    	>    
     <ImageView
		android:id="@+id/titleBackImageBtn"
		android:src="@drawable/style_button_back_gray1"
        android:layout_width="wrap_content"   
        android:layout_height="match_parent" 
     	android:padding="8dp"
        /> 	
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:singleLine="true"
		android:gravity="center"
		android:text="@string/usersettings"
		android:textColor="@color/textgray"
		android:textSize="19.0sp" />
		</RelativeLayout>    	
	<LinearLayout
	     	android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical"
		    android:background="@color/bg1" > 		    
		
		<LinearLayout 
		    android:id="@+id/ll_headportrait"
		    android:layout_width="fill_parent"
	    	android:layout_height="46dp"
	    	android:layout_marginTop="14dp"
	    	android:background="@drawable/itemcolor_selector"
	    	android:orientation="horizontal">
		    <ImageView	        
				android:layout_gravity="center" 
				android:layout_width="24dp"
				android:layout_height="24dp" 
				android:layout_marginLeft="20.0dip"
				android:background="@drawable/ico_people"
				/>							
			<TextView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_marginLeft="12dp"
				android:layout_gravity="center_vertical"
				android:textSize="15sp"	
				android:textColor="@color/textgray"
				android:text="@string/headportrait"			
		 	/>
			<LinearLayout
	  			android:layout_width="fill_parent"
	  			android:layout_height="fill_parent"
	  			android:orientation="vertical"
	  			android:gravity="center_vertical|right">
	  			<LinearLayout 
	  			    android:layout_width="wrap_content"
	  			    android:layout_height="wrap_content"
	  			    android:orientation="horizontal">
	  			<!--    <ImageView	        
						android:layout_gravity="center" 
						android:layout_width="40dp"
						android:layout_height="40dp" 
						android:layout_marginLeft="20.0dip"
						android:layout_marginRight="4dp"
						android:background="@drawable/ico_tx"/>	 --> 
					<com.fanhong.cn.view.CircleImg
				        android:id="@+id/avatarImg"
				        android:layout_width="40dp"
				        android:layout_height="40dp"
						android:layout_marginLeft="20.0dip"
						android:layout_marginRight="4dp"
				        android:contentDescription=""
				        android:src="@drawable/ico_tx" />			
					<ImageView 
						android:layout_width="22dp"
						android:layout_height="22dp"
						android:layout_gravity="center_vertical"
						android:layout_marginRight="10dp"
						android:focusable="false"
						android:background="@drawable/ico_next"
						/>
				</LinearLayout>
  			</LinearLayout>		
		</LinearLayout>
		
		<LinearLayout 
		    android:id="@+id/ll_nickname"
		    android:layout_width="fill_parent"
	    	android:layout_height="46dp"
	    	android:orientation="horizontal"
	    	android:layout_marginTop="14dp"
	    	android:background="@drawable/itemcolor_selector">
		    <ImageView	        
				android:layout_gravity="center" 
				android:layout_width="24dp"
				android:layout_height="24dp" 
				android:layout_marginLeft="20.0dip"
				android:background="@drawable/ico_name"
				/>							
			<TextView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_marginLeft="12dp"
				android:layout_gravity="center_vertical"
				android:textSize="15sp"	
				android:textColor="@color/textgray"
				android:text="@string/nickname"			
		 	/>
			<LinearLayout
	  			android:layout_width="fill_parent"
	  			android:layout_height="fill_parent"
	  			android:orientation="vertical"
	  			android:gravity="center_vertical|right">
	  			<LinearLayout 
	  			    android:layout_width="wrap_content"
	  			    android:layout_height="wrap_content"
	  			    android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip"
	  			    android:orientation="horizontal">
	  			    <TextView	   
	  			        android:id="@+id/tv_nickname"     
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:textSize="15sp"	
						android:layout_marginRight="4dp"
						android:textColor="@color/textgray"	/>					
					<ImageView 
						android:layout_width="22dp"
						android:layout_height="22dp"
						android:focusable="false"
						android:background="@drawable/ico_next"
						/>
				</LinearLayout>
  			</LinearLayout>		
		</LinearLayout>

		<LinearLayout 
		    android:id="@+id/ll_account"
		    android:layout_width="fill_parent"
	    	android:layout_height="46dp"
	    	android:orientation="horizontal"
	    	android:clickable="false"
	    	android:layout_marginTop="14dp"
	    	android:background="@drawable/itemcolor_selector">
		    <ImageView	        
				android:layout_gravity="center" 
				android:layout_width="24dp"
				android:layout_height="24dp" 
				android:layout_marginLeft="20.0dip"
				android:background="@drawable/ico_number"
				/>							
			<TextView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_marginLeft="12dp"
				android:layout_gravity="center_vertical"
				android:textSize="15sp"	
				android:textColor="@color/textgray"
				android:text="@string/account"			
		 	/>
			<LinearLayout
	  			android:layout_width="fill_parent"
	  			android:layout_height="fill_parent"
	  			android:orientation="vertical"
	  			android:gravity="center_vertical|right">
	  			<LinearLayout 
	  			    android:layout_width="wrap_content"
	  			    android:layout_height="wrap_content"
	  			    android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip"
	  			    android:orientation="horizontal">
	  			    <TextView	   
	  			        android:id="@+id/tv_account"     
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:textSize="15sp"	
						android:textColor="@color/textgray"
						android:text=""	/>						
					
				</LinearLayout>
  			</LinearLayout>		
		</LinearLayout>
		
		<LinearLayout 
		    android:id="@+id/ll_resetpsw"
		    android:layout_width="fill_parent"
	    	android:layout_height="46dp"
	    	android:orientation="horizontal"
	    	android:layout_marginTop="14dp"
	    	android:background="@drawable/itemcolor_selector">
		    <ImageView	        
				android:layout_gravity="center" 
				android:layout_width="24dp"
				android:layout_height="24dp" 
				android:layout_marginLeft="20.0dip"
				android:background="@drawable/ico_password1"
				/>							
			<TextView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_marginLeft="12dp"
				android:layout_gravity="center_vertical"
				android:textSize="15sp"	
				android:textColor="@color/textgray"
				android:text="@string/resetpsw"			
		 	/>
			<LinearLayout
	  			android:layout_width="fill_parent"
	  			android:layout_height="fill_parent"
	  			android:orientation="vertical"
	  			android:gravity="center_vertical|right">				
					<ImageView 
						android:layout_width="22dp"
						android:layout_height="22dp"
						android:layout_marginLeft="10dip"
						android:layout_marginRight="10dip"
						android:focusable="false"
						android:background="@drawable/ico_next"
						/>
  			</LinearLayout>		
		</LinearLayout>	
	</LinearLayout>	
	</LinearLayout>
</RelativeLayout>
