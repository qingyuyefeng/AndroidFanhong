<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/mainLayout"
	android:orientation="vertical" >
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_alignParentTop="true"
		android:background="@color/skyblue">
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_alignParentBottom="true"
		android:background="@color/black">
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:fitsSystemWindows="true"
		android:clipToPadding="true"
		android:orientation="vertical" >
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="48dp"
			android:layout_marginTop="4.0dip"
			android:background="@color/skyblue"
			>
			<LinearLayout
				android:layout_alignParentLeft="true"
				android:layout_centerInParent="true"
				android:gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent">
				<Button
					android:id="@+id/btn_back"
					android:background="@drawable/style_button_back_gray"
					android:layout_width="28dp"
					android:layout_height="28dp"
					android:layout_marginLeft="10dp"
					/>
			</LinearLayout>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:singleLine="true"
				android:gravity="center"
				android:text="@string/addgarden"
				android:textColor="@color/white"
				android:textSize="19.0sp" />

		</RelativeLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fillViewport="true"
			android:background="@color/bg1">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical" >
				<LinearLayout
					android:id="@+id/ll_code"
					android:layout_width="fill_parent"
					android:layout_height="46dp"
					android:background="@color/white"
					android:layout_marginTop="20dp"
					android:orientation="horizontal">
					<Button
						android:id="@+id/btn_selectgarden"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:paddingLeft="10dp"
						android:paddingRight="10dp"
						android:background="@drawable/btncolor_selector"
						android:text="点击选择小区"
						android:textSize="15sp"
						android:textColor="@color/white"
						android:layout_centerInParent="true"
						android:layout_alignParentRight="true"/>
					<TextView
						android:id="@+id/tv_garden"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="match_parent"
						android:gravity="center_vertical"
						android:layout_marginLeft="15dp"
						android:textSize="15sp"
						android:background="@null"
						/>
				</LinearLayout>


				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="10dp"
					android:padding="5dp"
					android:text="请输入楼栋号:"
					android:textColor="@color/textgray"
					android:textSize="15sp" />
				<EditText
					android:id="@+id/et_comment_content"
					android:layout_width="fill_parent"
					android:layout_height="40dp"
					android:layout_marginBottom="0dp"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="6dp"
					android:layout_marginRight="6dp"
					android:background="@drawable/shape"
					android:gravity="center_vertical"
					android:lines="1"
					android:hint="@string/assesshit2"
					android:textColor="@color/textgray"
					android:textColorHint="#adadad"
					android:textSize="15sp" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="10dp"
					android:text="选择你所需要的图片，包括房产证图片（或购房合同图片），一张本人正面照"
					android:textColor="@color/textgray"
					android:textSize="15sp" />

				<com.zhy.autolayout.AutoLinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingBottom="34px"
					android:paddingTop="45px">

					<HorizontalScrollView
						android:id="@+id/hsv_comment_imgs"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:scrollbars="none" />

					<ImageView
						android:id="@+id/iv_choose_goods_pic"
						android:layout_width="150px"
						android:layout_height="150px"
						android:layout_marginLeft="25px"
						android:background="@drawable/selector_comment_choose_bg"
						android:clickable="true"
						android:scaleType="fitXY"
						android:src="@drawable/icon_choose_pic" />
				</com.zhy.autolayout.AutoLinearLayout>


				<LinearLayout
					android:orientation="horizontal"
					android:layout_marginTop="24dp"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					>
					<Button
						android:id="@+id/btn_submit"
						android:layout_width="0dp"
						android:layout_height="46dp"
						android:layout_weight="3"
						android:text="@string/submit"
						android:textSize="18.0sp"
						android:textColor="@color/white"
						android:background="@drawable/denglu_selector" >
					</Button>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
