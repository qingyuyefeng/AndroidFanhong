<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView
        android:id="@+id/housekeeping_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ilon_keepclean"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="30px"
        android:paddingBottom="30px"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="0dp"
        android:layout_height="50px"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="30px">

        <TextView
            android:id="@+id/housekeeping_item_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="家庭保洁"
            android:textColor="@color/righttop"
            android:textSize="21px" />

        <TextView
            android:id="@+id/housekeeping_item_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="家洁 心兴"
            android:textColor="@color/rightbottom"
            android:layout_alignParentBottom="true"
            android:textSize="14px" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>