<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgray"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25px"
            android:layout_marginRight="30px"
            android:src="@drawable/icon_title" />

        <EditText
            android:id="@+id/edt_ms_title"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="物品发布的标题"
            android:textColor="@color/textblack"
            android:textColorHint="@color/texthint"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12px"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginRight="30px"
            android:layout_marginTop="14px"
            android:src="@drawable/icon_details" />

        <EditText
            android:id="@+id/edt_ms_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="top"
            android:hint="简要描述一下你的商品"
            android:lines="6"
            android:paddingBottom="18px"
            android:paddingTop="18px"
            android:textColor="@color/textblack"
            android:textColorHint="@color/texthint"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12px"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginRight="30px"
            android:layout_marginTop="14px"
            android:src="@drawable/icon_img_" />

        <!--<com.zhy.autolayout.AutoRelativeLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content">-->

            <!--<ImageView-->
                <!--android:id="@+id/img_ms_add1"-->
                <!--android:layout_width="180px"-->
                <!--android:layout_height="180px"-->
                <!--android:layout_marginBottom="14px"-->
                <!--android:layout_marginLeft="9px"-->
                <!--android:layout_marginTop="14px"-->
                <!--android:src="@drawable/test" />-->

            <!--<ImageView-->
                <!--android:id="@+id/img_ms_delete1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="6px"-->
                <!--android:src="@drawable/btn_delete" />-->
        <!--</com.zhy.autolayout.AutoRelativeLayout>-->

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px">

            <ImageView
                android:id="@+id/img_ms_add2"
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_marginBottom="14px"
                android:layout_marginLeft="9px"
                android:layout_marginTop="14px"
                android:src="@drawable/btn_add_img" />

            <ImageView
                android:id="@+id/img_ms_delete2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:src="@drawable/btn_delete"
                android:visibility="gone" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12px"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25px"
            android:layout_marginRight="30px"
            android:src="@drawable/icon_title" />

        <EditText
            android:id="@+id/edt_ms_price"
            android:layout_width="0dp"
            android:layout_height="60px"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="物品出售价格"
            android:textColor="@color/textblack"
            android:textColorHint="@color/texthint"
            android:textSize="26px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="40px"
            android:text="元"
            android:textColor="@color/red"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12px"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginRight="30px"
            android:layout_marginTop="14px"
            android:src="@drawable/icon_class" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="选择你的物品分类"
                android:textColor="@color/texthint"
                android:textSize="26px" />

            <RadioGroup
                android:id="@+id/rg_ms_classify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24px">

                    <RadioButton
                        android:id="@+id/rb_ms_classify1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="衣服鞋帽"
                        android:textColor="@drawable/comm_top_text_color_selector"
                        android:textSize="24px" />

                    <RadioButton
                        android:id="@+id/rb_ms_classify2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="数码产品"
                        android:textColor="@drawable/comm_top_text_color_selector"
                        android:textSize="24px" />

                    <RadioButton
                        android:id="@+id/rb_ms_classify3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="生活用品"
                        android:textColor="@drawable/comm_top_text_color_selector"
                        android:textSize="24px" />

                    <RadioButton
                        android:id="@+id/rb_ms_classify4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="书籍刊物"
                        android:textColor="@drawable/comm_top_text_color_selector"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14px">

                    <RadioButton
                        android:id="@+id/rb_ms_classify5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="家具家纺"
                        android:textColor="@drawable/comm_top_text_color_selector"
                        android:textSize="24px" />

                    <RadioButton
                        android:id="@+id/rb_ms_classify6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="家用电器"
                        android:textColor="@drawable/comm_top_text_color_selector"
                        android:textSize="24px" />

                    <RadioButton
                        android:id="@+id/rb_ms_classify7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="母婴玩具"
                        android:textColor="@drawable/comm_top_text_color_selector"
                        android:textSize="24px" />

                    <RadioButton
                        android:id="@+id/rb_ms_classify8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="其他物品"
                        android:textColor="@drawable/comm_top_text_color_selector"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </RadioGroup>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12px"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25px"
            android:layout_marginRight="30px"
            android:src="@drawable/icon_user_" />

        <EditText
            android:id="@+id/edt_ms_sender"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="发布人称呼（如：张先生）"
            android:textColor="@color/textblack"
            android:textColorHint="@color/texthint"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12px"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25px"
            android:layout_marginRight="30px"
            android:src="@drawable/icon_phone" />

        <EditText
            android:id="@+id/edt_ms_phone"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="输入联系号码"
            android:textColor="@color/textblack"
            android:textColorHint="@color/texthint"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="50px"
        android:background="@drawable/denglu_off"
        android:text="确 定 发 布"
        android:textColor="@color/white"
        android:textSize="30px" />

</com.zhy.autolayout.AutoLinearLayout>
