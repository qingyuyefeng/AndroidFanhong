<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/activity_top"/>
    <TextView
        android:id="@+id/fix_get_cells"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/icon_arrow_down_"
        android:text="@string/choosecell"
        android:background="@drawable/postpicture_biankuang"
        android:layout_margin="30px"
        android:padding="5px"
        android:drawablePadding="10px"/>
    <EditText
        android:id="@+id/fix_details"
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:background="@drawable/postpicture_biankuang"
        android:gravity="top"
        android:hint="请具体描述是哪一栋的哪一个单元门的问题"
        android:textSize="25px"
        android:padding="30px"/>
    <ImageView
        android:id="@+id/fix_add_img"
        android:layout_width="150px"
        android:layout_height="150px"
        android:src="@drawable/btn_add_img"
        android:layout_margin="15px"
        android:scaleType="fitXY"/>
    <Button
        android:id="@+id/fix_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_radius_red"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:layout_margin="15px"/>
</com.zhy.autolayout.AutoLinearLayout>

