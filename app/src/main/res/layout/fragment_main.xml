<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RadioGroup
            android:id="@+id/bottom_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_daohang"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/home_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="8px"
                android:drawableTop="@drawable/hide_home"
                android:gravity="center"
                android:paddingBottom="5px"
                android:paddingTop="5px"
                android:text="@string/tab_home"
                android:textColor="@color/skyblue"
                android:textSize="28px" />

            <RadioButton
                android:id="@+id/service_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="8px"
                android:drawableTop="@drawable/button_serve"
                android:gravity="center"
                android:paddingBottom="5px"
                android:paddingTop="5px"
                android:text="@string/tab_service"
                android:textColor="@color/textgray2"
                android:textSize="28px" />

            <RadioButton
                android:id="@+id/door_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="4px"
                android:drawableTop="@drawable/button_entrance_guard"
                android:gravity="center"
                android:paddingBottom="5px"
                android:paddingTop="5px"
                android:text="@string/tab_accesscontrol"
                android:textColor="@color/textgray2"
                android:textSize="28px" />

            <RadioButton
                android:id="@+id/interact_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="8px"
                android:drawableTop="@drawable/button_interaction"
                android:gravity="center"
                android:paddingBottom="5px"
                android:paddingTop="5px"
                android:text="@string/tab_interact"
                android:textColor="@color/textgray2"
                android:textSize="28px" />

            <RadioButton
                android:id="@+id/mine_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="8px"
                android:drawableTop="@drawable/button_user"
                android:gravity="center"
                android:paddingBottom="5px"
                android:paddingTop="5px"
                android:text="@string/tab_mine"
                android:textColor="@color/textgray2"
                android:textSize="28px"/>
        </RadioGroup>
    </com.zhy.autolayout.AutoLinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/click_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/click_home" />

        <ImageView
            android:id="@+id/click_serve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/click_serve"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/click_entrance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/click_entrance_guard"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/click_interaction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/click_interaction"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/click_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/click_user"
            android:visibility="invisible" />

    </LinearLayout>

    <include
        android:id="@+id/wellcome"
        layout="@layout/wellcomelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</com.zhy.autolayout.AutoRelativeLayout>