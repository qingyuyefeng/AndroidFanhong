<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/white"
    android:orientation="vertical">
	<LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/tx_bg"
    	>
    	<RelativeLayout
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	>		     	
			<com.fanhong.cn.view.CircleImg
			    android:id="@+id/iv_login"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:layout_marginTop="26dp"
				android:layout_marginBottom="6dp"
				android:layout_centerHorizontal="true"
				android:background="@drawable/ico_tx"
				 />	
			 <TextView 
			     android:id="@+id/tv_login"
			     android:layout_below="@id/iv_login"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:layout_centerHorizontal="true"
			     android:layout_marginBottom="20dp"
			     android:textSize="16sp"
			     android:text="@string/keylogin"
			     android:textColor="@color/white"/>		
		</RelativeLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="@color/white"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/ll_userset"
				android:layout_width="fill_parent"
				android:layout_height="46dp"
				android:layout_marginTop="0dp"
				android:background="@drawable/itemcolor_selector"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:layout_gravity="center"
					android:layout_marginLeft="20.0dip"
					android:background="@drawable/ico_people" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_marginLeft="12dp"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:text="@string/usersettings"
					android:textColor="@color/textgray"
					android:textSize="15sp" />

				<ImageView
					android:id="@+id/iv_next"
					android:layout_width="22dp"
					android:layout_height="22dp"
					android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip"
					android:background="@drawable/ico_qj"
					android:focusable="false" />

			</LinearLayout>

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="10dp"
				android:background="#e5e5e5" />

			<LinearLayout
				android:id="@+id/ll_mytradeno"
				android:layout_width="match_parent"
				android:layout_height="46dp"
				android:layout_marginTop="0dp"
				android:background="@drawable/itemcolor_selector"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:layout_gravity="center"
					android:layout_marginLeft="20.0dip"
					android:background="@drawable/ico_order" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_marginLeft="12dp"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:text="@string/mytradeno"
					android:textColor="@color/textgray"
					android:textSize="15sp" />

				<ImageView
					android:layout_width="22dp"
					android:layout_height="22dp"
					android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip"
					android:background="@drawable/ico_qj"
					android:focusable="false" />

			</LinearLayout>

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="10dp"
				android:background="#e5e5e5" />

			<LinearLayout
				android:id="@+id/ll_notice"
				android:layout_width="fill_parent"
				android:layout_height="46dp"
				android:layout_marginTop="0dp"
				android:background="@drawable/itemcolor_selector"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:layout_gravity="center"
					android:layout_marginLeft="20.0dip"
					android:background="@drawable/ico_message" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_marginLeft="12dp"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:text="@string/newsnotice"
					android:textColor="@color/textgray"
					android:textSize="15sp" />

				<ImageView
					android:layout_width="22dp"
					android:layout_height="22dp"
					android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip"
					android:background="@drawable/ico_qj"
					android:focusable="false" />
			</LinearLayout>
			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="10dp"
				android:background="#e5e5e5" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:background="@color/white"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/ll_call"
				android:layout_width="fill_parent"
				android:layout_height="46dp"
				android:layout_marginTop="0dp"
				android:background="@drawable/itemcolor_selector"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:layout_gravity="center"
					android:layout_marginLeft="20.0dip"
					android:background="@drawable/ico_kf" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="12dp"
					android:text="@string/kehurexian"
					android:textColor="@color/textgray"
					android:textSize="15sp" />

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:gravity="center_vertical|right"
					android:orientation="vertical">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dip"
						android:layout_marginRight="10dip"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/tv_call"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:text="@string/Customerhotline"
							android:textColor="@color/textgray"
							android:textSize="15sp" />

						<ImageView
							android:layout_width="22dp"
							android:layout_height="22dp"
							android:layout_marginLeft="10dip"

							android:background="@drawable/ico_qj"
							android:focusable="false" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="10dp"
				android:background="#e5e5e5" />

			<LinearLayout
				android:id="@+id/ll_generalset"
				android:layout_width="fill_parent"
				android:layout_height="46dp"
				android:layout_marginTop="0dp"
				android:background="@drawable/itemcolor_selector"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:layout_gravity="center"
					android:layout_marginLeft="20.0dip"
					android:background="@drawable/ico_sz" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_marginLeft="12dp"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:text="@string/tongyongsz"
					android:textColor="@color/textgray"
					android:textSize="15sp" />

				<ImageView
					android:layout_width="22dp"
					android:layout_height="22dp"
					android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip"
					android:background="@drawable/ico_qj"
					android:focusable="false" />

			</LinearLayout>

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="10dp"
				android:background="#e5e5e5" />

			<LinearLayout
				android:id="@+id/ll_versionupgrade"
				android:layout_width="fill_parent"
				android:layout_height="46dp"
				android:layout_marginTop="0dp"
				android:background="@drawable/itemcolor_selector"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:layout_gravity="center"
					android:layout_marginLeft="20.0dip"
					android:background="@drawable/ico_gx" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_marginLeft="12dp"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:text="@string/systemupgrade"
					android:textColor="@color/textgray"
					android:textSize="15sp" />

				<ImageView
					android:layout_width="22dp"
					android:layout_height="22dp"
					android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip"
					android:background="@drawable/ico_qj"
					android:focusable="false" />
			</LinearLayout>

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="10dp"
				android:background="#e5e5e5" />

			<LinearLayout
				android:id="@+id/ll_about"
				android:layout_width="fill_parent"
				android:layout_height="46dp"
				android:layout_marginTop="0dp"
				android:background="@drawable/itemcolor_selector"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="26dp"
					android:layout_height="26dp"
					android:layout_gravity="center"
					android:layout_marginLeft="20.0dip"
					android:background="@drawable/ico_about" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_marginLeft="12dp"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:text="@string/aboutour"
					android:textColor="@color/textgray"
					android:textSize="15sp" />

				<ImageView
					android:layout_width="22dp"
					android:layout_height="22dp"
					android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip"
					android:background="@drawable/ico_qj"
					android:focusable="false" />
			</LinearLayout>

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="10dp"
				android:background="#e5e5e5" />
		</LinearLayout>


	</LinearLayout>
</LinearLayout>