<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_title_"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/skyblue"
        android:layout_alignParentTop="true">


        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@drawable/btn_back" />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@drawable/btn_search" />

        <RadioGroup
            android:id="@+id/rg_title_community_store"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_centerInParent="true"
            android:background="#80D4FF"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5px">

            <RadioButton
                android:id="@+id/title_rb1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rb_bg_selector"
                android:button="@null"
                android:padding="4dp"
                android:text="物品买卖"
                android:textColor="@drawable/title_radio_text_selector"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/title_rb2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rb_bg_selector"
                android:button="@null"
                android:padding="4dp"
                android:text="物品发布"
                android:textColor="@drawable/title_radio_text_selector"
                android:textSize="16dp" />

        </RadioGroup>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/framelayout_comm_store"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title_">
    </com.zhy.autolayout.AutoFrameLayout>

</com.zhy.autolayout.AutoRelativeLayout>
