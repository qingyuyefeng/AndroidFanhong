<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >    
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="50dp" 
	    android:layout_alignParentTop="true"
	    android:background="@color/white">
    </LinearLayout>
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="50dp" 
	    android:layout_alignParentBottom="true"
	    android:background="@color/black">
    </LinearLayout>
	<LinearLayout
     	android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:fitsSystemWindows="true"  
        android:clipToPadding="true"
	    android:orientation="vertical" > 
    	<RelativeLayout
	    	android:layout_width="fill_parent"
	    	android:layout_height="48dp"    	       
			android:layout_marginTop="4.0dip" 
			android:background="@color/white"
	    	>    
     <ImageView
		android:id="@+id/titleBackImageBtn"
		android:src="@drawable/style_button_back_gray1"
        android:layout_width="wrap_content"   
        android:layout_height="match_parent" 
     	android:padding="8dp"
        /> 	
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:singleLine="true"
		android:gravity="center"
		android:text="@string/tongyongsz"
		android:textColor="@color/textgray"
		android:textSize="19.0sp" />
		</RelativeLayout>    	
	<LinearLayout
	     	android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical"
		    android:background="@color/bg1" > 		    
		
		<LinearLayout 
		    android:id="@+id/ll_headportrait"
		    android:layout_width="fill_parent"
	    	android:layout_height="46dp"
	    	android:layout_marginTop="14dp"
	    	android:background="@drawable/itemcolor_selector"
	    	android:orientation="horizontal">		    						
			<TextView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_marginLeft="12dp"
				android:layout_gravity="center_vertical"
				android:textSize="15sp"	
				android:textColor="@color/textgray"
				android:text="@string/messagenotification"			
		 	/>
			<LinearLayout
	  			android:layout_width="fill_parent"
	  			android:layout_height="fill_parent"
	  			android:orientation="vertical"
				android:layout_marginRight="16dip"
	  			android:gravity="center_vertical|right">	  				
			    <ToggleButton
					android:id="@+id/tgl_Notice"
					android:background="@drawable/selector_butn_toggle"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:checked="true"
					android:textOn="" 
					android:textOff="" 
					android:text="" />     
  			</LinearLayout>		
		</LinearLayout>
		
		<LinearLayout 
		    android:id="@+id/ll_erasecaching"
		    android:layout_width="fill_parent"
	    	android:layout_height="46dp"
	    	android:orientation="horizontal"
	    	android:layout_marginTop="14dp"
	    	android:background="@drawable/itemcolor_selector">		    							
			<TextView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_marginLeft="12dp"
				android:layout_gravity="center_vertical"
				android:textSize="15sp"	
				android:textColor="@color/textgray"
				android:text="@string/Eliminatecaching"			
		 	/>
			<LinearLayout
	  			android:layout_width="fill_parent"
	  			android:layout_height="fill_parent"
	  			android:orientation="vertical"
				android:layout_marginRight="10dip"
	  			android:gravity="center_vertical|right">
	  			
	  			    <TextView	   
	  			        android:id="@+id/tv_cach"     
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:textSize="15sp"	
						android:text="(0.15M)"
						android:textColor="@color/textgray"	/>					
					
  			</LinearLayout>		
		</LinearLayout>
	<LinearLayout 
        android:orientation="horizontal"	        
		android:layout_marginTop="20dp"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	>
        <Button	            
			android:id="@+id/btn_exitaccount"
			android:layout_width="fill_parent" 
			android:layout_height="50dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:text="@string/exitaccount"	
			android:textSize="19.0sp"
			android:textColor="@color/textred"		
			android:background="@drawable/btn_exituser_selector" >
		</Button>	
    </LinearLayout>	
		
	</LinearLayout>	
	</LinearLayout>
</RelativeLayout>
